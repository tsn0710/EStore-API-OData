@model Product

@{
    ViewData["Title"] = "Detail";
}
<h1>Details</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Product Information</h3>
        <ul>
            <li> ProductID: @Model.ProductId</li>
            <li>Product Name: @Model.ProductName</li>
            <li>Category: @Model.CategoryId</li>
            <li>Weight: @Model.Weight</li>
            <li>UnitPrice: @Model.UnitPrice</li>
            <li>UnitsInStock: @Model.UnitInStock</li>
        </ul>
        <a asp-action="Index">Back to List</a>
    </div>

</div>