@model Member;

@{
    ViewData["Title"] = "Update";
}
@inject IHttpContextAccessor HttpContextAccessor;
@{
    string email = HttpContextAccessor.HttpContext.Session.GetString("Email") ?? "";
}
@if (email.Length == 0)
{
        <script type="text/javascript">
            alert("Please login first");
        window.location.href = "../../Home/Login";
        </script>
}

<h1>Update Member</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="@Url.Action("Update", "Members", new { @Model.MemberId })">
            <div class="form-group">
                <label for="ProductName">Email:</label>
                <input asp-for="@Model.Email" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="CategoryId">CompanyName:</label>
                <input asp-for="@Model.CompanyName" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Weight">City:</label>
                <input asp-for="@Model.City" class="form-control" />
            </div>
            <div class="form-group">
                <label for="UnitPrice">Country:</label>
                <input asp-for="@Model.Country" class="form-control" />
            </div>
            <div class="form-group">
                <label for="UnitInStock">Password:</label>
                <input asp-for="@Model.Password" class="form-control" required />
            </div>
            <input type="submit" value="Update" class="btn btn-primary" />
        </form>

    </div>

</div>
